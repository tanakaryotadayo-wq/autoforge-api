# ===== AutoForge API v7.0 =====

# LLM Backend: "deepseek" (安い) or "openai"
LLM_BACKEND=deepseek

# DeepSeek (推奨: $0.28/1M input tokens)
DEEPSEEK_API_KEY=sk-xxxxxxxx
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_CHAT_MODEL=deepseek-chat
DEEPSEEK_EMBEDDING_MODEL=text-embedding-3-small

# OpenAI (フォールバック)
OPENAI_API_KEY=sk-xxxxxxxx
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# PostgreSQL + pgvector
DATABASE_URL=postgresql://autoforge:autoforge@localhost:5433/autoforge

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password123

# JWT
SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32
ADMIN_PASSWORD=admin123

# AutoForge Settings
MAX_HISTORY_TURNS=10
MAX_PROPOSALS_HISTORY=20
DEFAULT_DOMAIN=ad_optimization
MAX_HOPS=3
RAG_TOP_K=5
RAG_MIN_SCORE=0.7
CLEANUP_DAYS_UNUSED=30
CLEANUP_MIN_IMPORTANCE=2.0
LLM_CONCURRENCY=2
EMBEDDING_CONCURRENCY=2

# Logging
LOG_LEVEL=INFO
LOG_JSON=false

# Server
HOST=0.0.0.0
PORT=8698
